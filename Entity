package com.example.movieassistant.repository;

import com.example.movieassistant.entity.Schedules;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import java.util.List;

@Repository
public interface ScheduleItemRepository extends JpaRepository<Schedules, Long> {

    // Find schedules by specific shooting date
    List<Schedules> findByDate(String date);

    // Find all schedules for a given location
    List<Schedules> findByLocation(String location);

    // Find schedules by cast member (partial match)
    List<Schedules> findByCastContaining(String cast);

    // Find schedules by crew member (partial match)
    List<Schedules> findByCrewContaining(String crew);
}
